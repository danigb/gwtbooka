<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.projectList {
			background-color: #00AEEF;
		}
		
		.scroll {
			background-color: #00AEEF;
		}
		
		.head {
			display: block;
			text-align: center;
			font-size: 1.3em;
			color: white;
			margin: 0 0 5px 0;
			border: 0;
		 }
	</ui:style>
	<g:LayoutPanel styleName="{style.projectList}">
		<g:layer left="10" top="10" right="0" height="50px">
			<g:HTMLPanel>
				<h1 class="{style.head}">Investigaciones</h1>
			</g:HTMLPanel>
		</g:layer>
		<g:layer left="10" top="50px" bottom="0" right="0">
			<g:ScrollPanel styleName="{style.scroll}">
				<g:FlowPanel ui:field="list"></g:FlowPanel>
			</g:ScrollPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 