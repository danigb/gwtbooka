<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.icon {
			display: block;
			float: left;
			width: 64px;
			height: 64px;
			margin: 7px 0 0 10px;
			cursor: pointer;
		}
		
		.navigation {
			width: 100%;
			overflow: hidden;
			background-color: white;
		}
		
		.content {
			background-color: #C6C8CA;
		}
		
		.status {
			display: block;
			width: 100%;
			padding: 1px 10px;
			font-size: 90%;
			background-color: black;
			color: #C6C8CA;
		}
		
		.right {
			float: right;
			margin: 7px 10px 0 0;
		}
		
		@sprite .entrance {
			gwt-image: 'entranceImage';
		}
		
		@sprite .archives {
			gwt-image: 'archivesImage';
		}
		
		@sprite .edition {
			gwt-image: 'editionImage';
		}
		
		@sprite .booka {
			gwt-image: 'bookaImage';
		}
		
		@sprite .account {
			gwt-image: 'accountImage';
		}
		
		@sprite .contact {
			gwt-image: 'contactImage';
		}
		
		@sprite .calendar {
			gwt-image: 'calendarImage';
		}
	</ui:style>

	<ui:image field="entranceImage" src="resources/entrance.icon.png"></ui:image>
	<ui:image field="archivesImage" src="resources/archives.icon.png"></ui:image>
	<ui:image field="editionImage" src="resources/edition.icon.png"></ui:image>
	<ui:image field="bookaImage" src="resources/booka.icon.png"></ui:image>
	<ui:image field="accountImage" src="resources/account.icon.png"></ui:image>
	<ui:image field="contactImage" src="resources/contact.icon.png"></ui:image>
	<ui:image field="calendarImage" src="resources/calendar.png"></ui:image>

	<g:FlowPanel styleName="{style.navigation}">
		<g:Hyperlink styleName="{style.icon} {style.entrance}"
			targetHistoryToken="/entrance" ui:field="entrance" />
		<g:Hyperlink styleName="{style.icon} {style.archives}"
			targetHistoryToken="/archives" ui:field="archives" />
		<g:Hyperlink styleName="{style.icon} {style.edition}"
			targetHistoryToken="/edition" ui:field="edition" />
		<g:Hyperlink styleName="{style.icon} {style.booka}"
			targetHistoryToken="/booka" ui:field="booka" />
		<g:Hyperlink styleName="{style.icon} {style.right} {style.calendar}"
			targetHistoryToken="/calendar" ui:field="calendar" />
		<g:Hyperlink styleName="{style.icon} {style.right} {style.account}"
			targetHistoryToken="/account" ui:field="account" />
		<g:Hyperlink styleName="{style.icon} {style.right} {style.contact}"
			targetHistoryToken="/contact" ui:field="contact" />
	</g:FlowPanel>
</ui:UiBinder> 