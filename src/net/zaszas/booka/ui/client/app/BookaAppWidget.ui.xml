<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:booka="urn:import:net.zaszas.booka.ui.client.app">
	<ui:style>
		.slide {
			background-color: #C6C8CA;
		}
	</ui:style>
	<g:LayoutPanel>
		<g:layer left="0" top="0" right="0" height="80px">
			<booka:NavigationWidget>
			</booka:NavigationWidget>
		</g:layer>
		<g:layer left="0" top="80px" right="0" bottom="0">
			<booka:SlideLayoutPanel ui:field="slideLayout"
				styleName="{style.slide}">
			</booka:SlideLayoutPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 