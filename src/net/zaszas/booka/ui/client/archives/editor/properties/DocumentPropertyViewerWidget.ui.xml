<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title {
			font-size: 200%;
			text-align: center;
		}
		
		.description {
			text-align: center;
			font-style: italic;
		}
		.edit {
			font-size: 60%;
			display: block;
			float: right;
		}
		
		.infoView {
			border-top: 1px solid white;
			border-bottom: 1px solid white;
		}
		
	</ui:style>
	<g:HTMLPanel styleName="container {style.infoView}">
	    <g:Anchor ui:field="edit" styleName="action {style.edit}">edit</g:Anchor>
		<g:Label styleName="{style.title}" ui:field="title">Title</g:Label>
		<g:Label styleName="{style.description}" ui:field="description">Description</g:Label>
	</g:HTMLPanel>
</ui:UiBinder> 