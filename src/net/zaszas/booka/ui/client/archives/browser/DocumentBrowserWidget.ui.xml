<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
		.scroll {
			background-color: white;
		}
		
		.browser {
			background-color: #efefef;
		}
	</ui:style>
	<g:LayoutPanel styleName="{style.browser}">
		<g:layer left="0" top="0" right="0" height="30px">
			<g:FlowPanel>
				<g:Anchor ui:field="create" styleName="action">Create document</g:Anchor>
			</g:FlowPanel>
		</g:layer>
		<g:layer left="0" top="30px" right="0" bottom="0">
			<g:ScrollPanel styleName="{style.scroll}">
				<g:FlowPanel ui:field="list"></g:FlowPanel>
			</g:ScrollPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 